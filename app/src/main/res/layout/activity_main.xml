<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sayla.androidassigment.MainActivity">

    <ImageView
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:src="@drawable/cat"
        android:id="@+id/iv_image"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone number:"
        android:layout_below="@+id/iv_image"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:fontFamily="sans"
        android:id="@+id/tv_phone_number"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_phone_number"
        android:text="03213213456"
        android:layout_below="@+id/iv_image"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date of birth:"
        android:layout_below="@+id/tv_phone_number"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:fontFamily="sans"
        android:id="@+id/tv_date_of_birth"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_phone_number"
        android:text="10/10/1993"
        android:layout_below="@+id/tv_phone_number"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="10dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_date_of_birth"
        android:text="Submit"
        android:layout_marginTop="30dp"
        android:paddingLeft="150dp"
        android:paddingRight="150dp"
        android:id="@+id/submit"
        />




</RelativeLayout>
